<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pos_kiosk_cash_credit.PaymentMethodScreen" owl="1">
        <div class="payment-method-screen">
            <div class="screen-header">
                <h1>Choose Payment Method</h1>
                <h2>Choisissez votre mode de paiement</h2>
            </div>
            
            <div class="payment-options">
                <button 
                    class="payment-option cash-option"
                    t-on-click="() => this.selectPaymentMethod('cash')"
                >
                    <i class="fa fa-money"></i>
                    <div class="option-text">
                        <h3>Cash</h3>
                        <p>Pay at cashier</p>
                        <small>Payer en caisse</small>
                    </div>
                </button>
                
                <button 
                    class="payment-option card-option"
                    t-on-click="() => this.selectPaymentMethod('card')"
                >
                    <i class="fa fa-credit-card"></i>
                    <div class="option-text">
                        <h3>Credit Card</h3>
                        <p>Pay now</p>
                        <small>Payer maintenant</small>
                    </div>
                </button>
            </div>
            
            <div class="screen-footer">
                <button class="btn-back" t-on-click="() => this.router.back()">
                    <i class="fa fa-arrow-left"></i>
                    Back / Retour
                </button>
            </div>
        </div>
    </t>
</templates>