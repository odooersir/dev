<templates>
    <t t-name="pos_kiosk_cash_credit.PaymentMethodPage" owl="1">
        <div class="payment-screen">
            <h2>Select Payment Method</h2>
            <div class="payment-options">
                <button t-on-click="() => selectPaymentMethod('cash')" class="btn-payment cash">
                    Pay with Cash
                </button>
                <button t-on-click="() => selectPaymentMethod('card')" class="btn-payment card">
                    Pay with Card
                </button>
            </div>
        </div>
    </t>
</templates>