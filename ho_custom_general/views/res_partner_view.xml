        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

            
                <xpath expr="//sheet/notebook" position="before" >

                    <group  name="personal_info" string="Personal Info"  invisible="is_company">
                                <group>
                                    
                                     <field name="first_name" invisible="is_company" />
                                     <field name="last_name" invisible="is_company"/>
                                      <field name="national_code" invisible="is_company" />
                                    <field name="father_name" invisible="is_company" />

                                    <field name="birth_place" invisible="is_company" />

                                    <field name="study_field_id" invisible="is_company"  options="{'no_create': True}" />


                                    <field name="education_degree" invisible="is_company" />

                                    <field name="year_degree" invisible="is_company"/>

                                    

                                </group>
                                <group>
                                   


                                    
                                    <field name="citizen_id" invisible="is_company" />
                                     <field name="passport_number" invisible="is_company" />
                                      <field name="comprehensive_code" invisible="is_company" />
                                     <field name="birth_date" invisible="is_company"/>

                                    <field name="insurance_number" invisible="is_company" />



                                </group>
                              
                    </group>

                    <group  name="company_info" string="Company Info" invisible="not is_company">
                                    <group>
                                        

                                        <field name="national_identity" invisible="not is_company" readonly="1"/>
                                        <field name="register_number" invisible="not is_company" readonly="1"/>

                                        <field name="company_register_type_id" invisible="not is_company" readonly="1"/>
                                        <field name="file_number" invisible="not is_company"  readonly="1"/>

                                          <field name="industry_id" invisible="not is_company"  options="{'no_create': True}" readonly="1"/>

                                        <field name="goods_service_provided" invisible="not is_company"  readonly="1"/>
                                        <field name="goods_service_required" invisible="not is_company"  readonly="1"/>

                                            </group>
                                    <group>
                                         <field name="business_name" invisible="not is_company" readonly="1"/>
                                          <field name="register_number" invisible="not is_company" readonly="1"/>
                                           <field name="company_state_id" invisible="not is_company" readonly="1"/>
                                           
                                          
                                           <field name="establishment_date" invisible="not is_company" readonly="1"/>


                                         
                                          <field name="activity_subject_id" invisible="not is_company" readonly="1" />

                                           <field name="share_number" invisible="not is_company"  readonly="1"/>
                                        <field name="share_value" invisible="not is_company"  readonly="1"/>




                                    </group>

                                    

                    </group>

                    
                    <group  name="business_info" string="Business Info" invisible="is_company">

                                    <group>
                                        <field name="business_name" invisible="is_company" readonly="1"/>
                                        <field name="file_number" invisible="is_company" readonly="1"/>
                                        <field name="presenter" invisible="is_company"  readonly="1"/>

                                        <field name="share_number" invisible="is_company"  readonly="1"/>
                                        <field name="share_value" invisible="is_company"  readonly="1"/>

                                        
                                    </group>

                                    <group>
                                        <field name="industry_id" invisible="is_company"  options="{'no_create': True}" readonly="1"/>
                                        <field name="activity_subject_id" invisible="is_company" readonly="1" />

                                        <field name="goods_service_provided" invisible="is_company"  readonly="1"/>
                                        <field name="goods_service_required" invisible="is_company"  readonly="1"/>

                                        <field name="position" invisible="is_company"  readonly="1"/>
                                        <field name="position_start" invisible="is_company"  readonly="1"/>
                                        <field name="position_end" invisible="is_company"  readonly="1"/>


                                    </group>


                   </group>

                   
                 

