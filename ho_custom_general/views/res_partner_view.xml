                                           <field name="approval_financial_statements" invisible="not is_company" readonly="1"/>
                                           <field name="signatory_registers" invisible="not is_company" readonly="1"/>
                                            <field name="signatory_papers" invisible="not is_company" readonly="1"/>


                                            <field name="token_signature_holder" readonly="1"/>
                                            <field name="last_ordinary_assembly" readonly="1"/>
                                            <field name="last_extension_inspector" readonly="1"/>
                                            <field name="approval_financial_statements" readonly="1"/>


                            </group>

                    </group>

                                         



           
                  
                  
             
                   
                   <group  name="communication_ways" string="Communication Ways" > 
                                <group>

                                       <!-- <field name="email" widget="email"/>-->
                                        <field name="website"/>


                                        <field name="telegram" />
                                        <field name="instagram" />
                                        <field name="linkedin" />
                                        
                                        <field name="knowing_method_id" />

                                         
                                    
                                </group>

                                <group>
                                       
                                        <field name="phone2" widget="phone"/>

                                        <field name="phone3" widget="phone"/>

                                       


                                        <field name="mobile2" widget="phone"/>
                                        <field name="mobile3" widget="phone"/>
                                         <field name="internal_number"/>
                                </group>


                   </group>
                
   
                </xpath>


                 <xpath expr="//page[@name='internal_notes']"  position="before">
                             <page id="member_tab" string="Company Member" name="member_tab" invisible="not is_company" >
                                <field name="company_member_ids"
                                
                                       mode="list,kanban"                                       
                                    
                                       >
                                    <list string="Company Member" delete="false" create="false" edit="false" no_open="1">
                                        <!-- Displayed fields -->
                                        
                                        <field name="company_member_id" domain="[('active', '!=', False)]"/>
                                         <field name="position_id"/>
                                        
                                        <field name="is_board_member"/>
                                        <field name="is_inspector"/>

                                         <field name="share_number" invisible="not is_board_member"/>
                                         <field name="share_value"  invisible="not is_board_member"/>
                                         <field name="share_type"  invisible="not is_board_member"/>
                                    </list>
                                    <!-- Form view to cover mobile use -->
                                    <form>
                                      <group>
                                              <field name="company_member_id"  domain="[('active', '!=', False)]" />
                                              <field name="position_id"/>

                                              <field name="is_board_member"/>
                                              <field name="is_inspector"/>

                                              <field name="share_number" invisible="not is_board_member"/>
                                               <field name="share_value" invisible="not is_board_member"/>
                                               <field name="share_type" invisible="not is_board_member"/>
                                       </group>
                                    </form>
                                </field>
                              
                            </page>
                </xpath>


